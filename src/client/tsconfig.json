{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "outDir": "../../build",
    "lib": ["es2019", "dom"],
    "rootDir": "../",
    "types": [],
    "paths": {
      "*": ["../../node_modules/*"],
      "@shared/*": ["../shared/*"]
    },
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["**/*.ts"],
  "exclude": ["**/server/*"],
  "references": [
    {
      "path": "../shared"
    }
  ]
}
