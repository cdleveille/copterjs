{
  "name": "helicopter",
  "version": "1.0.0",
  "main": "build/index.js",
  "repository": "https://github.com/cdleveille/helicopter.git",
  "author": "Chris Leveille",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "clean": "yarn autoclean --force",
    "clear": "rimraf build",
    "lint": "eslint --fix --ext .ts,.tsx .",
    "walk": "copyfiles -u 1 src/public/**/*.html src/public/**/*.css src/public/**/*.png build",
    "build": "yarn clear && tsc && yarn walk",
    "start": "yarn build && node ."
  },
  "dependencies": {
    "compression": "^1.7.4",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "dotenv": "^14.2.0",
    "express": "^4.17.2",
    "helmet": "^5.0.1",
    "morgan": "^1.10.0",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "eslint": "^8.7.0",
    "husky": "^7.0.4",
    "typescript": "^4.5.4"
  }
}
