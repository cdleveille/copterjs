{
  "name": "copterjs",
  "description": "Modern remake of the classic addicting flash game.",
  "version": "1.1.2",
  "main": "build/server/index.js",
  "repository": "https://github.com/cdleveille/copterjs.git",
  "author": "Chris Leveille",
  "license": "MIT",
  "scripts": {
    "db:init": "yarn mikro-orm migration:create --initial",
    "db:create": "yarn mikro-orm migration:create",
    "db:up": "yarn mikro-orm migration:up",
    "db:down": "yarn mikro-orm migration:down",
    "deploy-dev": "git checkout dev && git push && git push heroku-dev dev:main",
    "deploy-prod": "git checkout main && git push && git push heroku-prod main",
    "postinstall": "husky install",
    "lint": "eslint --fix --ext .js,.jsx,.ts,.tsx . && prettier --write .",
    "build": "rimraf build && concurrently --prefix \"[{name}]\" --names \"SERVER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold\" \"yarn build-server\" \"yarn build-client\"",
    "build-server": "rimraf build/server && rimraf build/shared && tsc -b src/server",
    "build-client": "rimraf build/client && webpack && rimraf build/client/*LICENSE.txt",
    "dev": "concurrently --prefix \"[{name}]\" --names \"SERVER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold\" \"yarn dev-server\" \"yarn dev-client\"",
    "dev-server": "ts-node-dev --respawn --transpile-only --project src/server/tsconfig.json src/server/index.ts",
    "dev-client": "webpack watch",
    "start": "node ."
  },
  "dependencies": {
    "@mikro-orm/core": "^5.1.1",
    "@mikro-orm/migrations": "^5.1.1",
    "@mikro-orm/postgresql": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.2",
    "helmet": "^5.0.1",
    "mikro-orm": "^5.1.0",
    "morgan": "^1.10.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.4.1",
    "socket.io-client": "^4.4.1",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@mikro-orm/cli": "^5.1.1",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.10",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "babel-loader": "^8.2.4",
    "concurrently": "^7.0.0",
    "copy-webpack-plugin": "^10.2.4",
    "css-loader": "^6.7.1",
    "dotenv": "^16.0.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.5.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.4",
    "javascript-obfuscator": "^4.0.0",
    "prettier": "^2.6.1",
    "rimraf": "^3.0.2",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.2.8",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.4",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2",
    "webpack-obfuscator": "^3.5.1",
    "workbox-webpack-plugin": "^6.5.3"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./mikro-orm.config.ts"
    ]
  }
}
