{
  "name": "helicopter",
  "version": "1.0.0",
  "main": "build/server/index.js",
  "repository": "https://github.com/cdleveille/helicopter.git",
  "author": "Chris Leveille",
  "license": "MIT",
  "scripts": {
    "db:init": "yarn mikro-orm migration:create --initial",
    "db:create": "yarn mikro-orm migration:create",
    "db:up": "yarn mikro-orm migration:up",
    "db:down": "yarn mikro-orm migration:down",
    "clean": "yarn autoclean --force",
    "clear": "rimraf build",
    "clear-client": "rimraf build/client",
    "copy": "copyfiles -u 1 -e \"**/*.ts\" -e \"**/tsconfig.json\" src/client/**/* build",
    "lint": "eslint --fix --ext .ts,.tsx .",
    "build": "yarn build-server && yarn build-client",
    "build-server": "tsc -b src/server",
    "build-client": "yarn clear-client && yarn copy && tsc -b src/client",
    "dev": "concurrently --prefix \"[{name}]\" --names \"SERVER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold\" \"yarn dev-server\" \"yarn dev-client\"",
    "dev-server": "ts-node-dev --respawn --transpile-only --project src/server/tsconfig.json src/server/index.ts",
    "dev-client": "nodemon --watch src/client --exec \"yarn build-client\"",
    "start": "node ."
  },
  "dependencies": {
    "@mikro-orm/core": "^5.1.1",
    "@mikro-orm/migrations": "^5.1.1",
    "@mikro-orm/postgresql": "^5.1.1",
    "compression": "^1.7.4",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "dotenv": "^14.2.0",
    "express": "^4.17.2",
    "helmet": "^5.0.1",
    "mikro-orm": "^5.1.0",
    "morgan": "^1.10.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^5.1.1",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "concurrently": "^7.0.0",
    "eslint": "^8.7.0",
    "nodemon": "^2.0.15",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.4"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./mikro-orm.config.ts"
    ]
  }
}
