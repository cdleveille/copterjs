{
  "name": "helicopter",
  "version": "1.0.0",
  "main": "build/src/server/index.js",
  "repository": "https://github.com/cdleveille/helicopter.git",
  "author": "Chris Leveille",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "db:init": "yarn mikro-orm migration:create --initial",
    "db:create": "yarn mikro-orm migration:create",
    "db:up": "yarn mikro-orm migration:up",
    "db:down": "yarn mikro-orm migration:down",
    "clean": "yarn autoclean --force",
    "clear": "rimraf build",
    "copy": "copyfiles -u 1 -e \"**/*.ts\" src/client/**/* build/src",
    "lint": "eslint --fix --ext .ts,.tsx .",
    "build": "yarn lint && yarn clear && tsc && yarn copy",
    "dev": "yarn build && yarn start",
    "start": "node ."
  },
  "dependencies": {
    "@mikro-orm/core": "^5.1.1",
    "@mikro-orm/migrations": "^5.1.1",
    "@mikro-orm/postgresql": "^5.1.1",
    "compression": "^1.7.4",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "dotenv": "^14.2.0",
    "express": "^4.17.2",
    "helmet": "^5.0.1",
    "mikro-orm": "^5.1.0",
    "morgan": "^1.10.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^5.1.1",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "eslint": "^8.7.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.4"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./mikro-orm.config.ts"
    ]
  }
}
